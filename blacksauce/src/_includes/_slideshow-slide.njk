{% macro item (filename, caption, alt) %}

<li class="slideshow__list-item js-slideshow-slide">
    <figure>
        <img class="slideshow__image js-lazy u-fit" src="/images/{{ filename }}--tiny.jpg" data-src="/images/{{ filename }}--original.jpg"
            alt="{{ alt }}">
        <figcaption class="slideshow__caption"> {{ caption }} </figcaption>
    </figure>
</li>

{% endmacro %}
